include ./card
include ./filters
include ./ph

mixin home(cards, activeFilters, title, displaynone = "")
  //- +ph()
  .home(class=`${displaynone}`)
    .home__left
      a.home__left-logo(href="/")!=icon("meLogoBig")
      +filters(activeFilters)
    .home__right
      .home__right-header
        .home__right-header-wrap
          a.home__right-header-wrap-logoSmall(href="/")!=icon("gmLogoSmall")
          .search
            .search__left
              .search__icon!=icon("mail1")
              input(placeholder="Get two new case studies every week").search__inner-text
            .search__text Stay updated
            .search__text-info
          .home__right-header-icons
            a.home__right-header-icons-gnt(href="/subscribe") get new tips
            //- a(href="/subscribe") album
            //- a(href="/slack")!=icon("slackSVG")
            a(href="https://twitter.com/GoodMarketingHQ" target="_blank")!=icon("twitter")
      if (title)
        h1.filterH1 #{title} Marketing Examples
      .outerCard
        .sponsor.sponsor1
          .sponsor__inner
            !=icon("emailoctopus")
            .sponsor__inner-p I use EmailOctopus for my email marketing. So should you.
            a.sponsor__inner-button(href="https://www.emailoctopus.com?ref=marketingexamples" target="_blank") Get started
        .sponsor.sponsor2
          .sponsor__inner
            !=icon("emailoctopus")
            .sponsor__inner-p Discover how much you can save by switching to EmailOctopus
            a.sponsor__inner-button(href="https://emailoctopus.com/savings-calculator?ref=marketingexamples" target="_blank") Compare savings
        .sponsor.sponsor3
          .sponsor__inner
            img(src="https://harrydry.s3.amazonaws.com/gdmarketing/sponsors/eoBros.jpg", alt="EmailOctopus Indie Hackers Interview")
            .sponsor__inner-p How two brothers bootstrapped their email marketing platform to profitability.
            a.sponsor__inner-button(href="https://www.indiehackers.com/podcast/042-gareth-and-jonathan-bull-of-emailoctopus?ref=marketingexamples" target="_blank") Play the interview
        each card in cards
          +card(card)
      //- .outerLoader
      //-   .loader
    //- mobile layout
    .hm__button Show filters
    .hm__filters
      +filters(activeFilters)