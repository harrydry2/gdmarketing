mixin ph()
  a.ph(href="https://www.producthunt.com/posts/my-twitter-inspiration-handbook" target="_blank")
    .ph__sticker.ph__sticker__left 🎉
    .ph__text On Product Hunt today ;)!{' '}
      span Show some love
    .ph__sticker.ph__sticker__right 🎉

mixin phBase()
  a.ph(href="/course")
    .ph__sticker.ph__sticker__left ✍️
    .ph__text Coming soon —!{' '}
      span  My all-action marketing course
    .ph__text-mobile Coming soon —!{' '}
      span Marketing Examples: The course
    .ph__sticker.ph__sticker__right ✍️