include ../home/mixins/home
include ../home/mixins/mail
include ./mixins/card

doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(http-equiv='X-UA-Compatible', content='ie=edge')
    link(rel='stylesheet', href='/dist/bundle.css')
    link(rel='icon', type='image/png', sizes='32x32', href='https://s3.amazonaws.com/harrydry/gdmarketing/meFav.png')
    meta(name='twitter:site', content='@harrydry')
    meta(property='og:site_name', content='Marketing Examples â€” Real world marketing case studies')
    //- meta(name='twitter:card', content='summary_large_image')
    //- meta(property='og:image:height', content='543')
    //- meta(property='og:image:width', content='1000')
    meta(property='og:type', content='website')
    script(async='', src='https://www.googletagmanager.com/gtag/js?id=UA-91909305-10')
    script.
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'UA-91909305-10');
    //- post
    title #{card.title}
    meta(property='og:title', content=`${card.title}`)
    meta(name='twitter:title', content=`${card.title}`)
    meta(property='og:url', content=`https://marketingexamples.com/${card.tBack}/${card.slug}`)
    link(rel='canonical', href=`https://marketingexamples.com/${card.tBack}/${card.slug}`)
    meta(name='description', content=`${card.desc}`)
    meta(property='og:description', content=`${card.desc}`)
    meta(name='twitter:description', content=`${card.desc}`)
    meta(property='og:image', content=`https://s3.amazonaws.com/harrydry/gdmarketing/cards/${card.img}.jpg`)
    meta(name='twitter:image', content=`https://s3.amazonaws.com/harrydry/gdmarketing/cards/${card.img}.jpg`)
    body
    .iosOverflow.postNoScroll
      .outerPost
        .outerPost__close!=icon("cross")
        .post
          .popupLoader
            .loader
          +pCard(card)
          .content
            block content
            .undera
              .undera__center
                .undera__center-text Like the article?
                a.undera__center-twitter(href=`https://twitter.com/intent/tweet?url=https%3A%2F%2Fmarketingexamples.com/${card.tBack}/${card.slug}&via=harrydry%20&text=${encodeURI(card.title)}` target="_blank")!=icon("twitter")
            .postEmail
              .mail__input
                .mail__input-icon!=icon("mail")
                input(placeholder="example@example.com")
              .mail__button Get one new tip every day
              .mail__bc-red
      +home(cards, activeFilters)
      +mail()
  block scripts
    script(src="/dist/bundle.js")