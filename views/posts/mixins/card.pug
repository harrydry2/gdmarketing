mixin pCard({num, title, sUrl, sText, tFront, tBack, slug, img})
  .post__top
    img(src=`https://s3.amazonaws.com/harrydry/gdmarketing/main/${slug}.${img}`).post__top-img
    .pCard(data-slug=`${slug}`)
      img(src=`https://s3.amazonaws.com/harrydry/gdmarketing/main/${slug}.${img}`)
      h2=title
      .pCard__bottom
        a.pCard__bottom-link(href=`${sUrl}` target="_blank")
          !=icon("link")
          .pCard__bottom-link-text=sText
        .pCard__bottom-tag=tFront