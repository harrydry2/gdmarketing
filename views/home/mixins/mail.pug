mixin tick(text)
  .tick
    .tick__icon!=icon("check")
    .tick__text=text

mixin mail(subscribePage)
  .outerMail(class=`${subscribePage}`)
    .mail
      .mail__icon!=icon("cross")
      h2 Love startups, but suck at marketing? Join 7,210 others getting practical tips in your inbox every week.
      .mail__tickouter
        +tick("Real startups")
        +tick("Easy to implement")
        +tick("2 minute read")
        +tick("< 0.4% unsubscribe")
        +tick("Free, forever")
      .mail__bc
        .mail__input
          .mail__input-icon!=icon("mail")
          input(placeholder="example@example.com")
        .mail__button Upgrade my marketing
        .mail__bc-red
